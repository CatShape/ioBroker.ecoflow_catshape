{
    "i18n": false,
    "type": "panel",
    "items": {
        "cronSchedule": {
            "type": "text",
            "label": "node-cron schedule for getting data from EcoFlow",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "cumulateDailyResetTime": {
            "type": "text",
            "label": "Reset time for cumulate daily states (state is set to 0 at this time)",
            "newLine": false,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "_newLine1": {
            "type": "staticText",
            "text": "",
            "newLine": true
        },
        "_apiKeysHeader": {
            "newLine": true,
            "type": "header",
            "text": "EcoFlow API keys configuration",
            "xs": 12,
            "sm": 12,
            "md": 12,
            "lg": 12,
            "xl": 12,
            "size": 3
        },
        "_introTableApiKeys": {
            "type": "staticText",
            "text": "Please add one entry for each of your EcoFlow API keys.",
            "newLine": true
        },
        "apiKeys": {
            "newLine": true,
            "type": "table",
            "xs": 12,
            "sm": 12,
            "md": 12,
            "lg": 12,
            "xl": 12,
            "items": [
                {
                    "type": "text",
                    "attr": "accessKey",
                    "width": "30%",
                    "title": "API access key",
                    "filter": false,
                    "sort": false,
                    "default": ""
                },
                {
                    "type": "password",
                    "attr": "secretKey",
                    "width": "30%",
                    "title": "API secret key",
                    "filter": false,
                    "sort": false,
                    "default": "",
                    "visible": true
                },
                {
                    "type": "select",
                    "attr": "baseUrl",
                    "width": "30%",
                    "options": [
                        { "value": "https://api-e.ecoflow.com", "label": "https://api-e.ecoflow.com (other)" },
                        { "value": "https://api-a.ecoflow.com", "label": "https://api-a.ecoflow.com (America, Taiwan)" },
                        { "value": "https://api.ecoflow.com", "label": "https://api.ecoflow.com (???)" }
                    ],
                    "title": "URL (depends on the country your EcoFlow-account is connected to)",
                    "filter": false,
                    "sort": false,
                    "default": "https://api-e.ecoflow.com"
                }
            ]
        },
        "_devicesHeader": {
            "newLine": true,
            "type": "header",
            "text": "EcoFlow devices configuration",
            "xs": 12,
            "sm": 12,
            "md": 12,
            "lg": 12,
            "xl": 12,
            "size": 3
        },
        "_introTableDevices": {
            "type": "staticText",
            "text": "Please add one entry for each of your EcoFlow devices.",
            "newLine": true
        },
        "devices": {
            "newLine": true,
            "type": "table",
            "xs": 12,
            "sm": 12,
            "md": 12,
            "lg": 12,
            "xl": 12,
            "items": [
                {
                    "type": "text",
                    "attr": "serialNumber",
                    "width": "50%",
                    "title": "Device serial number",
                    "filter": false,
                    "sort": false,
                    "default": ""
                },
                {
                    "type": "select",
                    "attr": "apiKey",
                    "width": "15%",
                    "options": [
                        { "value": "1", "label": "1." },
                        { "value": "2", "label": "2." },
                        { "value": "3", "label": "3." },
                        { "value": "4", "label": "4." },
                        { "value": "5", "label": "5." },
                        { "value": "6", "label": "6." },
                        { "value": "7", "label": "7." },
                        { "value": "8", "label": "8." },
                        { "value": "9", "label": "9." }
                    ],
                    "title": "API key to use",
                    "default": 1
                },
                {
                    "type": "checkbox",
                    "attr": "doNotUpdateOffline",
                    "title": "Do not update states if device is offline",
                    "width": "10%",
                    "filter": false,
                    "sort": false,
                    "default": true
                },
                {
                    "type": "checkbox",
                    "attr": "updateQuotaState",
                    "title": "Update quota state",
                    "width": "10%",
                    "filter": false,
                    "sort": false,
                    "default": false
                }
            ]
        }
    }
}
